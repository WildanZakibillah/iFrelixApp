<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item4Activity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/jobItem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"> <!-- Added margin-top to push the content down -->

        <!-- Job Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content Writer"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Company Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT. Kreatif Media - Bandung"
            android:textSize="14sp" />

        <!-- Job Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Membuat konten tulisan kreatif untuk berbagai platform digital."
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Salary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaji: Rp 3-4 jt"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Additional Information -->
        <!-- Kualifikasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kualifikasi: Pengalaman menulis konten digital, kreatif, dan mampu menulis dengan baik untuk berbagai platform."
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Persyaratan (Bentuk Poin) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persyaratan:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Pendidikan minimal D3/S1 di bidang Komunikasi, Sastra, atau bidang terkait"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Memiliki pengalaman menulis konten digital minimal 1 tahun"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Mampu menulis artikel dengan gaya yang menarik dan sesuai dengan kebutuhan audiens"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Menguasai teknik penulisan SEO dan mengetahui cara meningkatkan visibilitas konten di mesin pencari"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Mampu bekerja dengan tenggat waktu yang ketat"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <!-- Deadline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline: 28 Februari 2025"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Additional Description or Requirements -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penjelasan: Kandidat yang terpilih akan bertanggung jawab dalam menulis artikel, blog, dan konten lainnya untuk platform digital, seperti website dan media sosial."
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Apply Button -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:background="#0000FF"
            android:padding="12dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</LinearLayout>
