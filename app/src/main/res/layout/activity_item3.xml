<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item3Activity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/jobItem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="16dp"> <!-- Added margin-top to push the content down -->

        <!-- Job Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Editor"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Company Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PT. Cipta Purnama Jaya - Jakarta"
            android:textSize="14sp" />

        <!-- Job Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mengedit video klien dari tahap awal hingga hasil akhir yang profesional."
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Salary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaji: Rp 3-5 jt"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Additional Information -->
        <!-- Kualifikasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kualifikasi: Pengalaman dalam editing video, menguasai software editing seperti Adobe Premiere Pro dan After Effects."
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Persyaratan (Bentuk Poin) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Persyaratan:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Pendidikan minimal D3/S1 di bidang terkait atau seni audiovisual"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Pengalaman minimal 1 tahun dalam mengedit video"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Menguasai software editing video seperti Adobe Premiere Pro, After Effects, dan Final Cut Pro"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Memiliki kreativitas tinggi dalam editing dan pengolahan video"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <!-- Deadline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline: 20 Februari 2025"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Additional Description or Requirements -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penjelasan: Kandidat yang berhasil akan bertanggung jawab untuk mengedit video klien dari awal hingga akhir, memastikan hasil yang sesuai dengan harapan klien."
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <!-- Apply Button -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:background="#0000FF"
            android:padding="12dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</LinearLayout>
